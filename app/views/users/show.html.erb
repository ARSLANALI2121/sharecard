<p id="notice"><%= notice %></p>

<table id='user-table' class="table table-hover">
            <thead  class="thead-light">
              <tr>
                <th>Name</th>
				<th>User Name</th>
                <th>Company Name</th>
                <th>Email Address</th>
				<th>Created At</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
                <tr>
                  <td><%= @user.first_name %></td>
                  <td><%= @user.user_name %></td>
                  <td><%= @user.company %></td>
                  <td><%= @user.email %></td>
                  <td><%= @user.created_at %></td>
                  <%= @svg.html_safe if @svg.present? %> 
                <% if policy(current_user).update? %>
                  <td><%= link_to 'Edit', edit_user_path(@user) %>
                  <% end %>
                  </td>
                  <% if policy(current_user).destroy? %>
                  <td><%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
                </tr>
            </tbody>
          </table>