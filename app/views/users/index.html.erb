<div class="my-div">
	<h1 class="show-user"> WellCome To User Record List </h1>
</div>
<div class='container-fluid'>
      <p id="notice"><%= notice %></p>
      <div class='row py-3 px-3'>
        <div class='col-12 col-sm-8'>
          <h3 class="user-list">Registered User List</h3>
          <table id='user-table' class="table table-hover">
            <thead  class="thead-light">
              <tr>
                <th>First Name</th>
				<th>User Name</th>
                <th>Company Name</th>
                <th>Email Address</th>
				<th>Created At</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
            
              <% @user.each do |user| %>
                <tr>
                  <td><%= user.first_name %></td>
                  <td><%= user.user_name %></td>
                  <td><%= user.company %></td>
                  <td><%= user.email %></td>
                  <td><%= user.created_at %></td>
                  <td><%= link_to 'Show', user %></td>
                  <td>
                  <%if policy(current_user).update? %>
                  <%= link_to 'Edit', edit_user_path(user) %>
                  <% end %>
                  </td>
                  <%if policy(current_user).destroy? %>
                  <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
              
            </tbody>
          </table>
          <br>
            <%= will_paginate @user, :container => false %>
        </div>
	</div>
<div>
